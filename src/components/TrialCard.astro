---
/**
 * Karta reprezentująca pojedynczą próbę magiczną
 * @param {string} title - Nazwa próby
 * @param {string} description - Krótki opis próby
 * @param {string} slug - Identyfikator URL próby
 */
interface Props {
  title: string;
  description: string;
  slug: string;
}

const { title, description, slug } = Astro.props;
---

<div class="bg-gradient-to-r from-white to-purple-50 rounded-lg shadow-lg p-6 border border-indigo-100 relative overflow-hidden transition-all duration-300 hover:shadow-xl hover:scale-[1.02]">
  <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-primary-400 to-secondary-400"></div>
  <div class="absolute top-0 right-0 w-24 h-24 bg-blue-100 rounded-full blur-xl opacity-30 -mr-10 -mt-10"></div>
  <div class="absolute bottom-0 left-0 w-16 h-16 bg-purple-100 rounded-full blur-xl opacity-30 -ml-5 -mb-5"></div>
  
  <div class="relative z-10">
    <h2 class="text-2xl font-bold bg-gradient-to-r from-primary-600 to-secondary-600 inline-block text-transparent bg-clip-text mb-2">
      {title}
    </h2>
    
    <p class="text-gray-600 mb-6">{description}</p>
    
    <a 
      href={`/trial/${slug}`}
      class="inline-block bg-gradient-to-r from-primary-500 to-secondary-500 hover:from-primary-600 hover:to-secondary-600 text-white px-4 py-2 rounded-md transition-colors shadow-md"
    >
      <span class="flex items-center">
        <span class="mr-2">✨</span>
        <span>Rzuć zaklęcie</span>
      </span>
    </a>
  </div>
</div>
