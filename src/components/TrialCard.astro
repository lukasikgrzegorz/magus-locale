---
/**
 * Karta reprezentująca pojedynczą próbę magiczną
 * @param {string} title - Nazwa próby
 * @param {string} description - Krótki opis próby
 * @param {string} slug - Identyfikator URL próby
 */
interface Props {
  title: string;
  description: string;
  slug: string;
}

const { title, description, slug } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6 mb-6 transition-all hover:shadow-lg">
  <h2 class="text-xl font-bold text-primary-800 mb-2">{title}</h2>
  <p class="text-gray-600 mb-4">{description}</p>
  <a 
    href={`/trial/${slug}`} 
    class="inline-block px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 transition-colors"
  >
    Przejdź do próby
  </a>
</div>
